  Contribution Name <input type = "text" name = "contName"></input>
  Contribution Amount <input type = "text" name = "contAmount"></input>
  <input type = "submit"></input>
</form>

<h4>Contributions</h4>
  {{#each contribution}}
  {{/each}}
